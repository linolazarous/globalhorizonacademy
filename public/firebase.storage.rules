// firebase.storage.rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Course materials are readable by anyone (or only authenticated users)
    match /courses/{courseId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
    
    // User uploads are private to each user
    match /user-uploads/{userId}/{fileName} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /certificates/{certificateId}.pdf {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
  }
}